{% extends 'base.html.twig' %}

{% block title %}Admin analyse technique -
	{{ parent() }}
{% endblock %}

{% block body %}
	<main>
		<div style="width:80%" class="analyseTechnique">
			{% for analyse in analyse %}
				<div style="margin-bottom:3rem;width:100%" class="analyseContainer">
					<div class="personne">
						<div class="avata"></div>
						<div class="identite">
							<p class="">{{analyse.utilisateur}}</p>
							<p id="">Publié le
								{{analyse.date |date("d/m/Y à H:i","Europe/Paris")}}
							</p>
						</div>
					</div>
					<div class="analyseT">
						<p class="texte_analyse">
							Nom de l'actif :
							{{analyse.actif}}
						</p>
						<p class="texte_analyse">
							Analyse technique :
							<a style="color:beige" href="{{analyse.analyse}}">Voir l'analyse technique
							</a>
						</p>
						<p class="texte_analyse formfield">
							<label>Plan de l'analyse :</label>
							<textarea readonly="readonly" style="width:90%;padding:5px;border:3px solid #0d1230;border-radius:8px" rows="7" cols="45">{{analyse.explication}}</textarea>
						</p>
					</div>
					<div class="commenter">
						<button>
							<a style="color:#110D26" href="{{ path('analyse_delete', {'analyseId' : analyse.id}) }}" type="button">
								Supprimer</a>
						</button>
					</div>
				</div>
			{% endfor %}
		</div>
	</main>
	{{knp_pagination_render(analyse,'layout/pagination.html.twig')}}
{% endblock %}
