{% extends 'base.html.twig' %}

{% block title %}Admin Controller
{% endblock %}

{% block body %}
	<main >
		<div style="width:80%" class="analyseTechnique">
			{% for analyse in analyse %}
				<div style="margin-bottom:3rem;width:100%" class="analyseContainer">
					<div class="personne">
						<div class="avata"></div>
						<div class="identite">
							<p class="">Pseudo</p>
							<p id="">Publié le
								{{analyse.date |date("d/m/Y à H:i")}}
							</p>
						</div>
					</div>
					<div class="analyseT">
						<p class="texte_analyse">
							Nom de l'actif :
							{{analyse.actif}}
						</p>
						<p class="texte_analyse">
							Analyse technique :
							<a style="color:beige" href="{{analyse.analyse}}">Voir l'analyse technique
							</a>
						</p>
						<textarea class="texte_analyse" rows="4" cols="55">
							Plan de l'analyse :
							{{analyse.explication}}
						</textarea>
					</div>
					<div class="commenter">
						<button>
							<a style="color:#110D26" href="{{ path('analyse_delete', {'analyseId' : analyse.id}) }}" type="button">
							Supprimer</a>
						</button>
					</div>
				</div>
			{% endfor %}
		</div>
	</main>
{% endblock %}
