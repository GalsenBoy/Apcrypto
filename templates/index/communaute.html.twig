{% extends 'base.html.twig' %}

{% block title %}Communauté -
	{{ parent() }}
{% endblock %}


{% block body %}
	<main>
		<div style="width:80%" class="analyseTechnique">
			<div class="partager">
				{% if app.user %}
					<button>
						<a style="color:#110D26" href="{{ path('analyse_create')}}">Partager une analyse technique</a>
					</button>
				{% else %}
					<button>
						<a style="color:#110D26" href="{{ path('app_login')}}">Partager une analyse technique</a>
					</button>
				{% endif %}
				<button>Partager une analyse fondamentale</button>
			</div>
			{% for analyse in analyse %}
				<div style="margin-bottom:3rem; width:100%" class="analyseContainer">
					<div class="personne">
						<div class="avata"></div>
						<div class="identite">
							<p class="">Pseudo</p>
							<p id="">Publié le
								{{analyse.date |date("d/m/Y à H:i")}}
							</p>
						</div>
					</div>
					<div class="analyseT">
						<p class="texte_analyse">
							Nom de l'actif :
							{{analyse.actif}}
						</p>
						<p class="texte_analyse">
							Analyse technique :
							<a style="color:beige" href="{{analyse.analyse}}">Voir l'analyse technique
							</a>
						</p>
						<label>Plan de l'analyse :</label>
						<textarea style="border:none" class="texte_analyse" rows="6" cols="120">
							
							{{analyse.explication}}
						</textarea>
					</div>
					<div class="commenter">
						<button>
							<a style="color:#110D26" href="{{ path('analyse_display', {'analyseId' : analyse.id}) }}" type="button">Commenter</a>
						</button>
					</div>
				</div>
			{% endfor %}
		</div>
	</main>
{% endblock %}
