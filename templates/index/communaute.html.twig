{% extends 'base.html.twig' %}

{% block title %}Communauté -
	{{ parent() }}
{% endblock %}


{% block body %}
	<main>
		<div class="analyse_container">
			<div class="partager">
				{% if app.user %}
					<button>
						<a style="color:#110D26" href="{{ path('analyse_create')}}">Partager une analyse technique</a>
					</button>
				{% else %}
					<button>
						<a style="color:#110D26" href="{{ path('app_login')}}">Partager une analyse technique</a>
					</button>
				{% endif %}
				<button>Partager une analyse fondamentale</button>
			</div>
			{% for analyse in analyse %}
				<div style="margin-bottom:3rem" class="communaute_container">
					<div class="persona">
						<div class="avatar"></div>
						<div class="identite">
							<p class="pseudo">Pseudo</p>
							<p id="date">Publié le
								{{analyse.date |date("d/m/Y à H:i")}}</p>
						</div>
					</div>
					<div class="analyse">
						<p class="texte_analyse">
							Nom de l'actif :
							{{analyse.actif}}
						</p>
						<p class="texte_analyse">
							Analyse technique :
							<a style="color:beige" href="{{analyse.analyse}}">Voir l'analyse technique
							</a>
						</p>
						<p class="texte_analyse">
							Plan de l'analyse :
							{{analyse.explication}}
						</p>
					</div>
					<div class="commentaire">
						<button>
							<a style="color:#110D26" href="{{ path('analyse_display', {'analyseId' : analyse.id}) }}" type="button">Commenter</a>
						</button>
					</div>
				</div>
			{% endfor %}
		</div>
	</main>
{% endblock %}
