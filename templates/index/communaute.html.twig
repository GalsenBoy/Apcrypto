<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<meta name="description" content=" Où partager des analyses techniques? Communauté crypto-monnaie... Partage d'analyse gratuitement avec d'autres membres "/>
		<title>
			{% block title %}
				Analuse technique - Apcrypto
			{% endblock %}
		</title>
		{# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
		{% block stylesheets %}
			<link rel="icon" href="{{ asset('apcrypto/img/onglet.png')}} ">
			<link href="https://fonts.googleapis.com/css2?family=Signika:wght@500&family=Ubuntu&display=swap" rel="stylesheet">
			<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer"/>
			<link rel="stylesheet" href="{{ asset('apcrypto/css/style.css') }}">
			<link rel="stylesheet" href="{{ asset('apcrypto/css/communaute/communaute.css')}} ">
			<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
			<script src="https://unpkg.com/scrollreveal@4.0.0/dist/scrollreveal.min.js"></script>
		{% endblock %}
	</head>
	<body>
		{% include 'layout/header.html.twig' %}
		{% block body %}
			<main>
				<div style="width:85%" class="analyseTechnique">
					<div class="partager">
						{% if app.user and app.user.estactif == true %}
							<button>
								<a style="color:#110D26" href="{{ path('analyse_create')}}">Partager une analyse technique</a>
							</button>
						{% else %}
							<button>
								<a style="color:#110D26" href="{{ path('app_login')}}">Partager une analyse technique</a>
							</button>
						{% endif %}
					</div>
					{% for analyse in analyse %}
						<div style="margin-bottom:3rem;width:100%" class="analyseContainer">
							<div class="personne">
								<div class="avata"></div>
								<div class="identite">
									<p class="pseudo">{{analyse.utilisateur}}</p>
									<p id="date">Publié le
										{{analyse.date |date("d/m/Y à H:i","Europe/Paris")}}
									</p>
								</div>
							</div>
							<div class="analyseT">
								<p class="texte_analyse">
									Nom de l'actif :
									{{analyse.actif}}
								</p>
								<p class="texte_analyse">
									Analyse technique :
									<a style="color:beige" href="{{analyse.analyse}}">Voir l'analyse technique
									</a>
								</p>
								<p class="texte_analyse formfield">
									<label>Plan de l'analyse :</label>
									<textarea readonly="readonly" style="width:90%;padding:5px;border:3px solid #0d1230;border-radius:8px" rows="7" cols="45">{{analyse.explication}}</textarea>
								</p>
							</div>
							<div class="commenter">
								<button>
									<a style="color:#110D26" href="{{ path('analyse_display', {'analyseId' : analyse.id}) }}" type="button">Commenter</a>
								</button>
							</div>
						</div>
					{% endfor %}
				</div>
			</main>
			{{knp_pagination_render(analyse,'layout/pagination.html.twig')}}
		{% endblock %}
		{% include 'layout/footer.html.twig' %}
		{% block javascripts %}
			<script src=" {{ asset('apcrypto/js/script.js') }} "></script>
			<script src=" {{ asset('apcrypto/js/communaute.js') }}"></script>
		{% endblock %}
	</body>
</html>
