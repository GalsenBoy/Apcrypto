{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}
	<form method="post" style="margin-top:100px">
		{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

		{% if app.user %}
			<div class="mb-3">
				You are logged in as
				{{ app.user.userIdentifier }},
				<a href="{{ path('app_logout') }}">
					Se déconnecter</a>
			</div>
		{% endif %}

		<div class="container_formulaire">
			<div class="div_image">
				<img src="./image/logo/freelogo.png" alt="">
			</div>
			<div class="div_formulaire">
				<div>
					<label for="inputEmail" class="label">E-mail</label>
					<br>
					<input class="input" type="email" placeholder="Email" value="{{ last_username }}" name="email" id="inputEmail" autocomplete="email" required autofocus>
				</div>
				<div>
					<label for="inputPassword">Mot de passe</label>
					<br>
					<input class="input" type="password" placeholder="Password" name="password" id="inputPassword" autocomplete="current-password" required>
					<a href="{{path('app_forgot_password_request')}}">J'ai oublié mon mot de passe</a>
				</div>
				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
				<div>
					<button type="submit">
						Connexion</button>
				</div>
				
			</div>
		</div>
	</form>
{% endblock %}
